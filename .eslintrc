{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "preval": true
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "15.5"
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": 2,
    "jsx-a11y/href-no-hash": 0,
    "react/no-deprecated": 2,
    "react/jsx-filename-extension": 0,
    "react/require-default-props": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0
  }
}
